#ifndef _OSGODE_SPHERE_HPP
#define _OSGODE_SPHERE_HPP




/* ======================================================================= */
#include <osgODE/Collidable>

#include <osgODE/ODE>
/* ======================================================================= */




namespace osgODE
{




/* ======================================================================= */
/* ======================================================================= */




/* ======================================================================= */
/* ....................................................................... */
//! A bounding sphere.
/*!
 */
class OSG_EXPORT Sphere: public Collidable
{
/* ======================================================================= */
public:
             Sphere(void) ;
             Sphere(const Sphere& other, const osg::CopyOp& copyop=osg::CopyOp::SHALLOW_COPY) ;

protected:
    virtual ~Sphere(void) ;
/* ======================================================================= */




/* ======================================================================= */
public:
    META_Object(osgODE, Sphere) ;
/* ======================================================================= */









/* ======================================================================= */
public:
    //! diameter = ( size[0] + size[1] + size[2] ) / 3.0
    virtual void        setSize(const osg::Vec3& size) ;

    //! [diameter, diameter, diameter]
    virtual osg::Vec3   getSize(void) const ;
/* ======================================================================= */




/* ======================================================================= */
private:
    static void     _cloneODESphere(dGeomID src, dGeomID dst) ;
/* ======================================================================= */




/* ======================================================================= */
private:
/* ======================================================================= */
} ;
/* ....................................................................... */
/* ======================================================================= */




} // namespace osgODE




// #include "Sphere.inl"




#endif /* _OSGODE_SPHERE_HPP */
