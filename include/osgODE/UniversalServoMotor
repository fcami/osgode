#ifndef _OSGODE_UNIVERSALSERVOMOTOR_HPP
#define _OSGODE_UNIVERSALSERVOMOTOR_HPP




/* ======================================================================= */
#include <osgODE/ODECallback>
/* ======================================================================= */




namespace osgODE
{




/* ======================================================================= */
/* ======================================================================= */




/* ======================================================================= */
/* ....................................................................... */
//! A servo motor for the UniversalJoint
/*!
 *
 */
class OSG_EXPORT UniversalServoMotor: public ODECallback
{
/* ======================================================================= */
public:
             UniversalServoMotor(void) ;
             UniversalServoMotor(const UniversalServoMotor& other, const osg::CopyOp& copyop=osg::CopyOp::SHALLOW_COPY) ;

protected:
    virtual ~UniversalServoMotor(void) ;
/* ======================================================================= */




/* ======================================================================= */
public:
    META_Object(osgODE, UniversalServoMotor) ;
/* ======================================================================= */









/* ======================================================================= */
public:
    //! Set the desired position for the first axis in radians
    inline void         setPosition1( double position ) ;

    //! Get the desired position for the first axis in radians
    inline double       getPosition1( void ) const ;


    //! Set the desired position for the second axis in radians
    inline void         setPosition2( double position ) ;

    //! Get the desired position for the second axis in radians
    inline double       getPosition2( void ) const ;


    //! Set the force for the first axis
    inline void         setForce1( double force ) ;

    //! Get the force for the first axis
    inline double       getForce1( void ) const ;


    //! Set the force for the second axis
    inline void         setForce2( double force ) ;

    //! Get the force for the second axis
    inline double       getForce2( void ) const ;


    //! Set the gain for the first axis
    inline void         setGain1( double gain ) ;

    //! Get the gain for the first axis
    inline double       getGain1( void ) const ;


    //! Set the gain for the second axis
    inline void         setGain2( double gain ) ;

    //! Get the gain for the second axis
    inline double       getGain2( void ) const ;
/* ======================================================================= */




/* ======================================================================= */
public:
    //! Compute and apply the force
    /*!
     * SIGSEGV (or assert) if obj is not a UniversalJoint
     */
    virtual void        operator()(ODEObject* object) ;
/* ======================================================================= */




/* ======================================================================= */
private:
    double      m_position[2] ;
    double      m_force[2] ;
    double      m_gain[2] ;
/* ======================================================================= */
} ;
/* ....................................................................... */
/* ======================================================================= */




} // namespace osgODE




#include "UniversalServoMotor.inl"




#endif /* _OSGODE_UNIVERSALSERVOMOTOR_HPP */
