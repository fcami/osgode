#ifndef _OSGODE_ONEWAYFIXEDJOINT_HPP
#define _OSGODE_ONEWAYFIXEDJOINT_HPP




/* ======================================================================= */
#include <osgODE/BypassJoint>
/* ======================================================================= */




namespace osgODE
{




/* ======================================================================= */
/* ======================================================================= */




/* ======================================================================= */
/* ....................................................................... */
//!
/*!
 *
 */
class OSG_EXPORT OneWayFixedJoint: public BypassJoint
{
/* ======================================================================= */
public:
             OneWayFixedJoint(void) ;
             OneWayFixedJoint(const OneWayFixedJoint& other, const osg::CopyOp& copyop=osg::CopyOp::SHALLOW_COPY) ;

protected:
    virtual ~OneWayFixedJoint(void) ;
/* ======================================================================= */




/* ======================================================================= */
public:
    META_Object(osgODE, OneWayFixedJoint) ;
/* ======================================================================= */









/* ======================================================================= */
public:
    //! Set the matrix that transforms body1 to body2
    inline void                 setMatrix( const osg::Matrix& matrix ) ;

    //! Get the matrix that transforms body1 to body2
    inline const osg::Matrix&   getMatrix(void) const ;


    //! Set whether to constrain the rotation. Default: true
    inline void setConstrainRotation( bool rotation_mode ) ;

    //! Get if the joint constrains the rotation. Default: true
    inline bool getConstrainRotation(void) const ;
/* ======================================================================= */




/* ======================================================================= */
public:
    virtual void    update(double step_size) ;
/* ======================================================================= */




/* ======================================================================= */
public:
    virtual OneWayFixedJoint*       asOneWayFixedJoint(void) ;
/* ======================================================================= */




/* ======================================================================= */
private:
    osg::Matrix     m_matrix ;
    osg::Quat       m_quat ;
    osg::Vec3       m_pos ;
    bool            m_rotation_mode ;
/* ======================================================================= */
} ;
/* ....................................................................... */
/* ======================================================================= */




} // namespace osgODE




#include "OneWayFixedJoint.inl"




#endif /* _OSGODE_ONEWAYFIXEDJOINT_HPP */
