#ifndef _OSGODE_AERODYNAMICDEVICE_HPP
#define _OSGODE_AERODYNAMICDEVICE_HPP




/* ======================================================================= */
#include <osgODE/ODECallback>
/* ======================================================================= */




namespace osgODE
{




/* ======================================================================= */
/* ======================================================================= */




/* ======================================================================= */
/* ....................................................................... */
//! Oppose resistance to motion due to the friction with the air
/*!
 * The mechanism is very rough:\n
 * compute the force as 1/2 d c S V^2 where:\n
 * - d is the air density ;\n
 * - c is a body related coefficient;\n
 * - S is the surface which "takes air" ;\n
 * - V is the body velocity.\n
 * The only parameter to set is CX = c*S
 */
class OSG_EXPORT AerodynamicDevice: public ODECallback
{
/* ======================================================================= */
public:
             AerodynamicDevice(double cx=1.0) ;
             AerodynamicDevice(const AerodynamicDevice& other, const osg::CopyOp& copyop=osg::CopyOp::SHALLOW_COPY) ;

protected:
    virtual ~AerodynamicDevice(void) ;
/* ======================================================================= */




/* ======================================================================= */
public:
    META_Object(osgODE, AerodynamicDevice) ;
/* ======================================================================= */









/* ======================================================================= */
public:
    //! Set CX (see class description) Default: 1.0
    inline void     setCX(double cx) ;

    //! Get CX (see class description) Default: 1.0
    inline double   getCX(void) const ;
/* ======================================================================= */




/* ======================================================================= */
public:
    //! Apply the force on the body
    /*!
     * SIGSEGV (or assert) when obj is not a RigidBody
     */
    virtual void        operator()(ODEObject* object) ;
/* ======================================================================= */




/* ======================================================================= */
private:
    double      m_cx ;
/* ======================================================================= */
} ;
/* ....................................................................... */
/* ======================================================================= */




} // namespace osgODE




#include "AerodynamicDevice.inl"




#endif /* _OSGODE_AERODYNAMICDEVICE_HPP */
