#ifndef _OSGODE_MANAGEREVENTHANDLER_HPP
#define _OSGODE_MANAGEREVENTHANDLER_HPP




/* ======================================================================= */
#include <osgGA/GUIEventHandler>
/* ======================================================================= */




namespace osgODE
{




/* ======================================================================= */
/* ======================================================================= */




/* ======================================================================= */
/* ....................................................................... */
//!
/*!
 *
 */
class OSG_EXPORT ManagerEventHandler: public osgGA::GUIEventHandler
{
/* ======================================================================= */
public:
             ManagerEventHandler(void) ;
             ManagerEventHandler(const ManagerEventHandler& other, const osg::CopyOp& copyop=osg::CopyOp::SHALLOW_COPY) ;

protected:
    virtual ~ManagerEventHandler(void) ;
/* ======================================================================= */




/* ======================================================================= */
public:
    META_Object(osgODE, ManagerEventHandler) ;
/* ======================================================================= */









/* ======================================================================= */
public:
    virtual bool    handle( const osgGA::GUIEventAdapter&   ea,
                            osgGA::GUIActionAdapter&        aa,
                            osg::Object*                    manager_obj,
                            osg::NodeVisitor*               nv ) ;
/* ======================================================================= */




/* ======================================================================= */
private:
    bool    m_warp_pointer_requested ;
    bool    m_motion ;
/* ======================================================================= */
} ;
/* ....................................................................... */
/* ======================================================================= */




} // namespace osgODE




#include "ManagerEventHandler.inl"




#endif /* _OSGODE_MANAGEREVENTHANDLER_HPP */
