#ifndef _OSGODE_COLLISIONPREDICTOR_HPP
#define _OSGODE_COLLISIONPREDICTOR_HPP




/* ======================================================================= */
#include <osgODE/ODECallback>
#include <osgODE/CommonRayCastResults>
/* ======================================================================= */




namespace osgODE
{




/* ======================================================================= */
/* ======================================================================= */




/* ======================================================================= */
/* ....................................................................... */
//! Improves collision detection accuracy for little, fast moving objects
/*!
 * This is intended to be a post-update callabck
 */
class OSG_EXPORT CollisionPredictor: public ODECallback
{
/* ======================================================================= */
public:
             CollisionPredictor(void) ;
             CollisionPredictor(const CollisionPredictor& other, const osg::CopyOp& copyop=osg::CopyOp::SHALLOW_COPY) ;

protected:
    virtual ~CollisionPredictor(void) ;
/* ======================================================================= */




/* ======================================================================= */
public:
    META_Object(osgODE, CollisionPredictor) ;
/* ======================================================================= */









/* ======================================================================= */
public:
    //! Check for collisions that the body could miss
    /*!
     * SIGSEGV (or assert) if the object is not a Collidable
     */
    virtual void        operator()(ODEObject* object) ;
/* ======================================================================= */




/* ======================================================================= */
private:
    osg::ref_ptr<AllRayCastResult>  m_ray_cast_result ;
/* ======================================================================= */
} ;
/* ....................................................................... */
/* ======================================================================= */




} // namespace osgODE




// #include "CollisionPredictor.inl"




#endif /* _OSGODE_COLLISIONPREDICTOR_HPP */
