#ifndef _OSGODE_DBALLJOINT_HPP
#define _OSGODE_DBALLJOINT_HPP




/* ======================================================================= */
#include <osgODE/Joint>
/* ======================================================================= */




namespace osgODE
{




/* ======================================================================= */
/* ======================================================================= */




/* ======================================================================= */
/* ....................................................................... */
//! A "ball and socket" joint with separable anchors
/*!
 */
class OSG_EXPORT DBallJoint: public osgODE::Joint
{
/* ======================================================================= */
public:
             DBallJoint(void) ;
             DBallJoint(const DBallJoint& other, const osg::CopyOp& copyop=osg::CopyOp::SHALLOW_COPY) ;

protected:
    virtual ~DBallJoint(void) ;
/* ======================================================================= */




/* ======================================================================= */
public:
    META_Object(osgODE, DBallJoint) ;
/* ======================================================================= */









/* ======================================================================= */
protected:
    virtual dJointID    cloneODEJoint(dWorldID world) const ;
/* ======================================================================= */




/* ======================================================================= */
private:
/* ======================================================================= */
} ;
/* ....................................................................... */
/* ======================================================================= */




} // namespace osgODE




// #include "DBallJoint.inl"




#endif /* _OSGODE_DBALLJOINT_HPP */
