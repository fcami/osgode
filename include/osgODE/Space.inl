inline void
osgODE::Space::setCleanup(bool mode)
{
    dSpaceSetCleanup(m_ODE_space, mode ? 1 : 0) ;
}
/* ....................................................................... */
/* ======================================================================= */




/* ======================================================================= */
/* ....................................................................... */
inline bool
osgODE::Space::getCleanup(void) const
{
    return dSpaceGetCleanup(m_ODE_space) != 0 ;
}
/* ....................................................................... */
/* ======================================================================= */




/* ======================================================================= */
/* ....................................................................... */
inline void
osgODE::Space::setSublevel(unsigned int sublevel)
{
    dSpaceSetSublevel(m_ODE_space, sublevel) ;
}
/* ....................................................................... */
/* ======================================================================= */




/* ======================================================================= */
/* ....................................................................... */
inline unsigned int
osgODE::Space::getSublevel(void) const
{
    return dSpaceGetSublevel(m_ODE_space) ;
}
