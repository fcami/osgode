/* ======================================================================= */




/* ======================================================================= */
/* ....................................................................... */
inline osgODE::NearCallback*
osgODE::Space::getNearCallback(void)
{
    return m_near_callback.get() ;
}
/* ....................................................................... */
/* ======================================================================= */




/* ======================================================================= */
/* ....................................................................... */
inline const osgODE::NearCallback*
osgODE::Space::getNearCallback(void) const
{
    return m_near_callback.get() ;
}
