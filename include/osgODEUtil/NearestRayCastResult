#ifndef _OSGODEUTIL_NEARESTRAYCASTRESULT_HPP
#define _OSGODEUTIL_NEARESTRAYCASTRESULT_HPP




/* ======================================================================= */
#include <osgODE/Space>
/* ======================================================================= */




/* ======================================================================= */
namespace osgODE {
    class Collidable ;
}
/* ======================================================================= */




namespace osgODEUtil
{




/* ======================================================================= */
/* ======================================================================= */




/* ======================================================================= */
/* ....................................................................... */
//!
/*!
 */
class OSG_EXPORT NearestRayCastResult: public osgODE::Space::RayCastResult
{
/* ======================================================================= */
public:
             NearestRayCastResult(void) ;
             NearestRayCastResult(const NearestRayCastResult& other) ;

protected:
    virtual ~NearestRayCastResult(void) ;
/* ======================================================================= */









/* ======================================================================= */
public:
    inline bool     hasHit(void) const ;
/* ======================================================================= */




/* ======================================================================= */
public:
    inline osgODE::Collidable*          getCollidable(void) ;
    inline const osgODE::Collidable*    getCollidable(void) const ;
    inline const osg::Vec3&             getPosition(void) const ;
    inline const osg::Vec3&             getNormal(void) const ;
    inline const double&                getDistance(void) const ;
/* ======================================================================= */




/* ======================================================================= */
public:
    virtual void    reset(void) ;

    virtual void    addContact( osgODE::Collidable* other,
                                const osg::Vec3& position,
                                const osg::Vec3& surface_normal,
                                double distance ) ;
/* ======================================================================= */




/* ======================================================================= */
private:
    osg::ref_ptr<osgODE::Collidable>    m_collidable ;
    osg::Vec3                           m_position ;
    osg::Vec3                           m_normal ;
    double                              m_distance ;
/* ======================================================================= */
} ;
/* ....................................................................... */
/* ======================================================================= */




} // namespace osgODEUtil




#include "NearestRayCastResult.inl"




#endif /* _OSGODEUTIL_NEARESTRAYCASTRESULT_HPP */
