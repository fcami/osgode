#ifndef _OSGODEUTIL_ALLRAYCASTRESULT_HPP
#define _OSGODEUTIL_ALLRAYCASTRESULT_HPP




/* ======================================================================= */
#include <osgODE/Space>
/* ======================================================================= */




/* ======================================================================= */
namespace osgODE {
    class Collidable ;
}
/* ======================================================================= */




namespace osgODEUtil
{




/* ======================================================================= */
/* ======================================================================= */




/* ======================================================================= */
/* ....................................................................... */
//!
/*!
 */
class OSG_EXPORT AllRayCastResult: public osgODE::Space::RayCastResult
{
/* ======================================================================= */
public:
             AllRayCastResult(void) ;
             AllRayCastResult(const AllRayCastResult& other) ;

protected:
    virtual ~AllRayCastResult(void) ;
/* ======================================================================= */









/* ======================================================================= */
public:
    inline bool     hasHit(void) const ;
/* ======================================================================= */




/* ======================================================================= */
public:
    typedef struct {
        osg::ref_ptr<osgODE::Collidable>    Collidable ;
        osg::Vec3                           Position ;
        osg::Vec3                           Normal ;
        double                              Distance ;
    } Collision ;

    typedef std::vector<Collision>  CollisionList ;


    inline CollisionList&       getCollisionList(void) ;
    inline const CollisionList& getCollisionList(void) const ;
/* ======================================================================= */




/* ======================================================================= */
public:
    void    sortByDistance(void) ;
/* ======================================================================= */




/* ======================================================================= */
public:
    virtual void    reset(void) ;

    virtual void    addContact( osgODE::Collidable* other,
                                const osg::Vec3& position,
                                const osg::Vec3& surface_normal,
                                double distance ) ;
/* ======================================================================= */




/* ======================================================================= */
private:
    CollisionList       m_collision_list ;
/* ======================================================================= */
} ;
/* ....................................................................... */
/* ======================================================================= */




} // namespace osgODEUtil




#include "AllRayCastResult.inl"




#endif /* _OSGODEUTIL_ALLRAYCASTRESULT_HPP */
